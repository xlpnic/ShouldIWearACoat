<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schemeBlack"
    tools:context="coatapp.coat.Home">


    <Button
        android:id="@+id/coatCheckButton"
        android:layout_width="203dp"
        android:layout_height="67dp"
        android:background="@drawable/button_custom"
        android:clickable="false"
        android:onClick="coatCheck"
        android:text="@string/coatCheckButtonText"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.244" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners_inverted"
        android:ems="10"
        android:gravity="center"
        android:inputType="none"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/schemeLightGrey"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/privacyPolicyText"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coatCheckButton"
        app:layout_constraintVertical_bias="0.74" />

    <TextView
        android:id="@+id/darkSkyCreditText"
        android:layout_width="365dp"
        android:layout_height="10dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="none"
        android:text="Dark Sky credit text"
        android:textAlignment="center"
        android:textColor="@color/schemeDarkTurquoise"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/privacyPolicyText"
        android:layout_width="365dp"
        android:layout_height="10dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="none"
        android:text="Privacy Policy Text"
        android:textAlignment="center"
        android:textColor="@color/schemeDarkTurquoise"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/iconCreditText"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/iconCreditText"
        android:layout_width="365dp"
        android:layout_height="10dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="none"
        android:text="icon credit text"
        android:textAlignment="center"
        android:textColor="@color/schemeDarkTurquoise"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="267dp"
        android:layout_height="80dp"
        android:layout_marginTop="52dp"
        android:text="@string/titleText"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/schemeLightTurquoise"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/loadingIndicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/schemeLightGrey"
        app:layout_constraintBottom_toTopOf="@+id/textResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coatCheckButton" />

    <TextView
        android:id="@+id/loadingPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/schemeLightGrey"
        app:layout_constraintBottom_toTopOf="@+id/textResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadingIndicator" />

</android.support.constraint.ConstraintLayout>
